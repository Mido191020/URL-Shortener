doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    style.
      body {
        background-color: #f8f9fa; // Light gray background
      }
      .main-container {
        background-color: #ffffff; // White background for the content
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .footer {
        background-color: #343a40; // Dark background for the footer
        color: #ffffff; // White text color
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      .form-label {
        font-size: 1.1rem; // Larger font size for the label
      }
      .form-group {
        margin-bottom: 1rem; // Space between label and input/button
      }
  body
    .container.d-flex.flex-column.min-vh-100
      .main-container.mx-auto.my-5.p-4
        h1.text-center URL Shortener
        form(action="/shorten" method="POST" class="my-4")
          .form-group
            label(for="longUrl", class="form-label") 
            input(type="url", name="longUrl", id="longUrl", class="form-control", placeholder="Enter your URL here", required)
          button(type="submit", class="btn btn-success btn-block") Shorten URL
        if error
          p.alert.alert-danger.text-center= error
    .footer
